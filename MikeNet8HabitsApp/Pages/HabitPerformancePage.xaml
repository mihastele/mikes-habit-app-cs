<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:MikeNet8HabitsApp.ViewModels;assembly=MikeNet8HabitsApp" x:Class="MikeNet8HabitsApp.Pages.HabitPerformancePage">
    <StackLayout Padding="20">
        <Label Text="Habit Performance" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Overall Metrics" FontAttributes="Bold" />
        <Label Text="Total completed: {Binding TotalCompleted}" />
        <Label Text="Avg % per day: {Binding AvgPercentPerDay, StringFormat='{0:F1}%'}" />
        <Label Text="All habits streak: {Binding AllHabitsStreak}" />
        <Label Text="Successful days streak: {Binding SuccessfulDayStreak}" />
        <ListView x:Name="HabitsList" ItemsSource="{Binding HabitItems}" HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:HabitPerformanceItem">
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding HabitName}" FontSize="18" />
                            <Label Text="{Binding PerformanceStats}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
