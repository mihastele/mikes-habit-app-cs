<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MikeNet8HabitsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MikeNet8HabitsApp"
    Shell.FlyoutBehavior="Disabled"
    Title="MikeNet8HabitsApp">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent Title="Calendar" ContentTemplate="{DataTemplate local:CalendarPage}" Route="CalendarPage" />
        <ShellContent Title="Performance" ContentTemplate="{DataTemplate local:HabitPerformancePage}" Route="PerformancePage" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
    </TabBar>

</Shell>
