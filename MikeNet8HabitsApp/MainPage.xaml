<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MikeNet8HabitsApp"
             x:Class="MikeNet8HabitsApp.MainPage"
             xmlns:classes="clr-namespace:MikeNet8HabitsApp.Classes"
             Title="Habit Tracker">
    <ContentPage.Resources>
        <local:NullToBooleanConverter x:Key="NullToBooleanConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header with Date Navigation -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="10" BackgroundColor="#f0f0f0">
            <Button Grid.Column="0" Text="&lt;" FontSize="20" WidthRequest="50"
                    Clicked="OnPreviousDayClicked" />
            <Label Grid.Column="1" x:Name="CurrentDateLabel" Text="Today, June 10"
                   HorizontalOptions="Center" VerticalOptions="Center" FontSize="18" FontAttributes="Bold" />
            <Button Grid.Column="2" Text="&gt;" FontSize="20" WidthRequest="50"
                    Clicked="OnNextDayClicked" />
        </Grid>

        <!-- Habits List -->
        <CollectionView Grid.Row="1" x:Name="HabitsCollection" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">

                        <!--  Countable Habit Increment Button and Count Display  -->
                        <!--  Countable Habit Increment Button and Count Display  -->
                        <HorizontalStackLayout Grid.Column="0" Grid.ColumnSpan="2"
                                               IsVisible="{Binding Source={RelativeSource AncestorType={x:Type classes:CountableHabit}}, Path=TargetCount, Converter={StaticResource NullToBooleanConverter}}"
                                               HorizontalOptions="End" VerticalOptions="Center">
                            <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding IsCompleted}"
                                      CheckedChanged="OnHabitCheckedChanged" HorizontalOptions="Center" />
                            <StackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="Center"
                                         HorizontalOptions="Center">
                                <Label Text="Done" FontSize="12" />
                            </StackLayout>
                            <Button Text="+" Clicked="OnIncrementCountClicked" WidthRequest="40" HeightRequest="40" />
                            <Label Text="{Binding CurrentCount}" VerticalOptions="Center" HorizontalOptions="Center" />
                        </HorizontalStackLayout>


                        <StackLayout Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" VerticalOptions="Center">
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding Description}" FontSize="12" TextColor="Gray" />
                        </StackLayout>


                        <!-- <Label Grid.Column="2" Grid.RowSpan="2" Text="{Binding Streak}" VerticalOptions="Center"  -->
                        <!--        HorizontalOptions="End" FontSize="14" TextColor="Orange" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type classes:CountableHabit}}, Path=TargetCount, Converter={StaticResource NullToBooleanConverter}, ConverterParameter=true}"/> -->
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No habits yet" FontSize="18" TextColor="Gray" />
                    <Label Text="Tap + to add your first habit" FontSize="14" TextColor="Gray" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Footer with Navigation Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*" Padding="10" BackgroundColor="#f0f0f0">
            <Button Grid.Column="0" Text="Add" Clicked="OnAddHabitClicked"
                    BackgroundColor="#4CAF50" TextColor="White" />
            <Button Grid.Column="1" Text="Progress" Clicked="OnProgressClicked"
                    BackgroundColor="#2196F3" TextColor="White" />
            <Button Grid.Column="2" Text="Calendar" Clicked="OnCalendarClicked"
                    BackgroundColor="#FF9800" TextColor="White" />
            <Button Grid.Column="3" Text="Settings" Clicked="OnSettingsClicked"
                    BackgroundColor="#9E9E9E" TextColor="White" />
        </Grid>
    </Grid>
</ContentPage>