            <Button Grid.Column="0" 
                    Clicked="OnAddHabitClicked"
                    BackgroundColor="#4CAF50"
                    CornerRadius="20"
                    WidthRequest="60"
                    HeightRequest="60">
                <Button.ImageSource>
                    <FontImageSource Glyph="+"
                                   FontFamily="MaterialDesignIcons"
                                   Color="White"
                                   Size="24" />
                </Button.ImageSource>
                <Button.SemanticProperties Hint="Add new habit" />
            </Button>
            
            
            
